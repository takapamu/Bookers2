
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <% if @book.errors.any? %>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     </ul>
      <% end %>
     
    
    
      <h2>Editing Book</h2>
      <%= form_for(@book, url: book_path(@book.id)) do |f| %>
      <form>
        <div class="form-group">
          <h4>Title</h4>
        <%= f.text_field :title,class:"col-xs-12" %>
        </div>
    
        <div class="form-group">
          <h4>Opinion</h4>
         <%= f.text_area :body,class:"col-xs-12" %>
        </div>
        
        
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <span><%= link_to 'Show', book_path, class:"show{book.id}" %></span>
        <span><%= link_to 'Back', books_path %></span>
      </form>
      <% end %>
    </div>
  </div>
</div>