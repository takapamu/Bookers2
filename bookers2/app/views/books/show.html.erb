<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>


   <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
    <table class="table">
      <tr>
      <td>
         <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50,  fallback: "no_image.jpg" %>
        <nav>
          <%= @book.user.name %>
        </nav>
        <% end %>
      </td>

        <td><%= link_to @book.title  %></td>
        <td><%= @book.body %></td>
         <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
        </tr>
    </table>
   </div>
  </div>
</div>