
 <div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
      <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
           <table class="table">
           <thead>
             <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
              </tr>
            </thead>

             <% @books.each do |book| %>
              <%= link_to user_path(@user.id) do %>
            <tbody>
              <tr>
               <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,  fallback: "no_image.jpg" %></td>
               <% end %>
               <td><%= link_to book.title, book_path(book.id) %></td>
               <td><%= book.body %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
     </div>
    </div>
   </div>


