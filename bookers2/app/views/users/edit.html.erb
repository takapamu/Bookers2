
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
        </ul>
      <% end %>
      
      <h2>User info</h2>
    <%= form_for(@user, url: user_path(current_user.id)) do |f| %>
      <form>
        <div class="form-group">
            <h4>Name</h4>
            <%= f.text_field :name %>
        </div>
        
        <div class="form-group">
        <label for="user_image">Image</label>
        <input type="file" class="form-control-file user_image" id="user_profile_image" name="user[profile_image]">
        </div>
        
        
        
        <div class="form-group">
            <h4>introduction</h4>
            <%= f.text_area :introduction %>
          </textarea>
        </div>
        <div class="form-group">
        <input type="submit" class="btn btn-secondary" name="commit" value="UpdateUser" data-disable-with="Update User">
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>