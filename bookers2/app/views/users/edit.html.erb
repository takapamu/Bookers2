
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
       <%= form_for(@book)  do |f| %>
      <form>
        <div class="form-group">
          <label for="user_name">Name</label>
          <input type="text" class="form-control" id="user_name" name="user[name]">
        </div>
        
        <div class="form-group">
        <label for="user_image">Image</label>
        <input type="file" class="form-control-file user_image" id="user_profile_image" name="user[profile_image]">
        </div>
        
        
        
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <textarea class="form-control introduction" id="user_introduction" name="user[introduction]">
          </textarea>
        </div>
        <div class="form-group">
        <input type="submit" class="btn btn-secondary" name="commit" value="UpdateUser" data-disable-with="Update User">
        
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>